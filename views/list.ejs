<%- include("header"); -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% for (let i = 0; i < (newListItems.length); i+=1) { %>
        <div class="item">
            <input type="checkbox">
            <p>
                <%= newListItems[i] %>
            </p>
        </div>
        <% } %>
        <form class="item" action="/" method="post">
            <input type="text" name="task" placeholder="New task" autocomplete="off">
            <button class="btn btn-primary" type="submit" name="list" value=<%= listTitle %> >+</button>
        </form>
    </div>

<%- include("footer"); -%>
